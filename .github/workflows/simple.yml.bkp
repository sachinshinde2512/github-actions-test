name: Shell Commands

on: [push]

jobs: 
    run-shell-commands:
       runs-on: ubuntu-latest
       steps:
         - name: Echo Commands
           run: echo "Hello World! This was my first bash command using GitHub Actions"
         - name: Multiline String
           run: |
               node -v
               npm -v
               python --version
               date
               uptime
         - name: Python Commands
           run: |
               import platform
               import os
               print(platform.processor())
           shell: python
    run-windows-commands:
        runs-on: windows-latest
        needs: [run-shell-commands]
        steps: 
          - name: Directory PowerShell Commands
            run: Get-Location
          - name: Directory bash
            run: pwd
            shell: bash